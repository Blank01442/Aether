task say_hi {
    say "Hello from the Global Math Library!"
}

task calc_magic {
    set x to 42
    say x
}

task add_numbers {
    set a to 10
    set b to 20
    set sum to a + b
    say "10 + 20 = "
    say sum
}

task multiply {
    set a to 5
    set b to 6
    set product to a * b
    say "5 * 6 = "
    say product
}
